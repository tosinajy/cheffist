<h1>Printable Food Storage Chart</h1>
<p>
  Use this conservative chart as a quick reference for pantry, fridge, and freezer ranges.
  This is educational guidance only and does not guarantee safety.
</p>

<p>
  <button type="button" onclick="window.print()">Download PDF / Print</button>
</p>

{% for category in foods.categories %}
<section>
  <h2>{{ category | replace("_", " ") }}</h2>
  <table class="print-chart-table">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Pantry</th>
        <th scope="col">Fridge</th>
        <th scope="col">Freezer</th>
      </tr>
    </thead>
    <tbody>
      {% for food in foods.items %}
      {% if food.category == category %}
      <tr>
        <th scope="row">{{ food.name }}</th>
        <td>{{ food.pantry_min_days }}-{{ food.pantry_max_days }} days</td>
        <td>{{ food.fridge_min_days }}-{{ food.fridge_max_days }} days</td>
        <td>{{ food.freezer_min_days }}-{{ food.freezer_max_days }} days</td>
      </tr>
      {% endif %}
      {% endfor %}
    </tbody>
  </table>
</section>
{% endfor %}

{% set emailCapture = {
  id: "printable-chart-email-capture",
  title: "Get updated chart when safety rules change",
  description: "We will email printable chart updates, rule changes, and seasonal food alerts.",
  source: "/printable-food-storage-chart/"
} %}
{% include "components/email-capture.njk" %}

<section>
  <h2>Dataset</h2>
  <p>Version {{ dataset.version }} | Last updated {{ dataset.last_updated }}</p>
</section>

<section>
  <h2>Disclaimer</h2>
  <p>
    Educational only, not medical advice. Use conservative judgment and discard food when uncertain.
    <a href="/disclaimer/">Read full disclaimer</a>.
  </p>
</section>

{% set affiliateBlock = {
  title: "Recommended tools (affiliate links)",
  products: printableAffiliateProducts,
  scenarioType: "storage",
  status: "SAFE",
  hasDisclaimerAbove: true
} %}
{% include "components/affiliate-block.njk" %}

{% if adContext.enabled %}
{% set adSlot = {
  enabled: true,
  zone: "bottom_page"
} %}
{% include "components/ad-slot.njk" %}
{% endif %}

<footer>
  <p>
    Conservative guidance may change as source rules update. When in doubt, throw it out.
  </p>
</footer>

<style>
  .print-chart-table {
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    width: 100%;
  }

  .print-chart-table th,
  .print-chart-table td {
    border: 1px solid #222;
    padding: 0.4rem;
    text-align: left;
    vertical-align: top;
  }

  @media print {
    button,
    nav,
    footer a {
      display: none;
    }

    body {
      font-size: 11pt;
    }

    h1,
    h2 {
      break-after: avoid;
    }

    .print-chart-table tr {
      break-inside: avoid;
    }
  }
</style>
