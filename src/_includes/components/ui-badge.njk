{% set badgeStatus = badgeStatus or "CAUTION" %}
{% set upper = badgeStatus | upper %}
{% set badgeClass = "inline-flex items-center gap-2 rounded-full px-3 py-1 text-xs font-semibold" %}
{% if upper == "SAFE" %}
{% set badgeClass = badgeClass + " bg-emerald-400/20 text-emerald-200 border border-emerald-300/30" %}
{% elif upper == "DISCARD" %}
{% set badgeClass = badgeClass + " bg-rose-400/20 text-rose-200 border border-rose-300/30" %}
{% else %}
{% set badgeClass = badgeClass + " bg-amber-400/20 text-amber-200 border border-amber-300/30" %}
{% endif %}
{% if badgeClassName %}
{% set badgeClass = badgeClass + " " + badgeClassName %}
{% endif %}

<span class="{{ badgeClass }}">
  <span class="h-1.5 w-1.5 rounded-full bg-current" aria-hidden="true"></span>
  {{ badgeLabel or upper }}
</span>
