{% set cardVariant = cardVariant or "default" %}
{% set cardClass = "rounded-2xl border border-white/10 bg-white/5 shadow-sm transition duration-150 ease-out motion-reduce:transition-none motion-reduce:transform-none" %}
{% if cardVariant == "elevated" %}
{% set cardClass = cardClass + " shadow-xl shadow-black/20" %}
{% elif cardVariant == "glass" %}
{% set cardClass = cardClass + " bg-white/10 backdrop-blur" %}
{% endif %}
{% if cardClassName %}
{% set cardClass = cardClass + " " + cardClassName %}
{% endif %}

<section class="{{ cardClass }}">
  {{ cardContent | safe }}
</section>
